<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baacccc"
    tools:context=".fffffrrraaggmemnnts.StaaartFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_10ddd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />


    <ImageView
        android:id="@+id/img_el1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/i1"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_50fgrr"
        app:layout_constraintEnd_toStartOf="@id/img_el2"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_05gt" />


    <ImageView
        android:id="@+id/img_el2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/i2"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_50fgrr"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_95gtgtt"
        app:layout_constraintStart_toEndOf="@id/img_el1" />

    <ImageView
        android:id="@+id/img_elfrgtgtgtgt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:rotation="12"
        android:src="@drawable/rrrrr"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_95gttg"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_95gtgtt"
        app:layout_constraintStart_toEndOf="@id/img_el1" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_05gt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <TextView
        android:id="@+id/tv_team_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#8555F4"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/opensans_extra_bold"
        android:padding="4dp"
        android:text="Team 1"
        android:textAllCaps="true"
        android:textColor="#120125"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/img_el1"
        app:layout_constraintStart_toStartOf="@id/img_el1"
        app:layout_constraintTop_toBottomOf="@id/img_el1" />

    <TextView
        android:id="@+id/tv_team_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#77F455"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/opensans_extra_bold"
        android:padding="4dp"
        android:text="Team 2"
        android:textAllCaps="true"
        android:textColor="#01250B"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/img_el2"
        app:layout_constraintStart_toStartOf="@id/img_el2"
        app:layout_constraintTop_toBottomOf="@id/img_el2" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_13dd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_95gttg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_85ddd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_50fgrr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_95gtgtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_05gt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_50gtgtg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <ImageView
        android:id="@+id/img_mechanicerfgt"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ussssser"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_85ddd"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_05gt" />

    <TextView
        android:id="@+id/juujjuujuj"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:background="#556AF4"
        android:fontFamily="@font/opensans_extra_bold"
        android:padding="2dp"
        android:text=": Choose your team"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/img_mechanicerfgt"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_95gtgtt"
        app:layout_constraintStart_toEndOf="@id/img_mechanicerfgt"
        app:layout_constraintTop_toTopOf="@id/img_mechanicerfgt" />


</androidx.constraintlayout.widget.ConstraintLayout>